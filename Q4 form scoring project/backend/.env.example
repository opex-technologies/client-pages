# Environment Configuration Example
# Copy this file to .env and fill in your values
# Created: November 5, 2025

# ============================================================================
# GCP Configuration
# ============================================================================
PROJECT_ID=opex-data-lake-k23k4y98m
REGION=us-central1

# ============================================================================
# BigQuery Datasets
# ============================================================================
AUTH_DATASET=auth
FORM_BUILDER_DATASET=form_builder
SCORING_DATASET=scoring
OPEX_DEV_DATASET=opex_dev

# ============================================================================
# JWT Configuration
# ============================================================================
# IMPORTANT: Change this in production! Use a strong random string
JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_RANDOM_STRING
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# ============================================================================
# Password Security
# ============================================================================
BCRYPT_ROUNDS=12
MIN_PASSWORD_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# ============================================================================
# Account Security
# ============================================================================
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30

# ============================================================================
# MFA Configuration
# ============================================================================
MFA_ENABLED=false
MFA_ISSUER=Opex Technologies

# ============================================================================
# GitHub Configuration (for form deployment)
# ============================================================================
# Generate personal access token at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=landoncolvig/opex-technologies
GITHUB_PAGES_BRANCH=gh-pages
GITHUB_FORMS_PATH=forms

# ============================================================================
# Cloud Storage
# ============================================================================
STORAGE_BUCKET=opex-web-forms-20250716-145646

# ============================================================================
# Environment Settings
# ============================================================================
# Options: development, staging, production
ENVIRONMENT=development
DEBUG=false

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
# Use * for all origins (development only)
CORS_ORIGINS=*

# ============================================================================
# Pagination
# ============================================================================
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================================================
# Logging
# ============================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
